# aliases
alias rs="rails server"
alias rg="rails generate"
alias sc="rails console"
alias db="rails db -p"
alias dbmg="bundle exec rake db:migrate"
alias dbtp="bundle exec rake db:test:prepare"
alias dbmgtp="bundle exec rake db:migrate; bundle exec rake db:test:prepare"
alias jt="python -mjson.tool"
alias spec="time bundle exec rake spec"
alias be="bundle exec"
alias gts="git status"
alias ccdiff="colordiff -u1"
alias sdo="sudo docker"
alias dfh='df -h -x squashfs -x tmpfs -x devtmpfs'

function g {
  gvim .
  sleep 0.3
  wmctrl -r GVIM -b add,maximized_vert,maximized_horz
}

